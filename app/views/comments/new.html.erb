<h2>コメント投稿</h2>
<%= form_for(@comment) do |f| %>
	<div class="field">
		<%= f.label "コメント" %>
		<%= f.text_area :content %>
	</div>

	<%= f.hidden_field :article_id, :value => @article.id %>
	<%= f.hidden_field :user_id, :value => current_user.id %>
	
	<div class="actions">
    	<%= f.submit %>
 	</div>
<% end %>