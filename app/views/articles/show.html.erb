<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <strong>Author:</strong>
  <%= @article.user.email %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user_id %>
</p>
<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>

<br><br>

<h2><%= link_to "コメントする", comment_path(@article.id) %>
</h2>

<br>

<h2>コメント一覧</h2>
<% @article.comments.each do |comment| %>
	<p><%= comment.content %> <%= comment.user.email%>
	<% if current_user.email == comment.user.email %>
	  <%= link_to "削除する", destroy_comment_path(comment.id), method: :delete %></p>
	<% end %>
<% end %>
